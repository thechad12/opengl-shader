{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cpp build active file",
            "command": "/usr/bin/cpp",
            "args": [
                "-g",
                "-I./include",
                "-L./lib",
                "../glad/src/glad.c",
                "../src/application.cpp",
                "-std=c++17",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}/application.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}